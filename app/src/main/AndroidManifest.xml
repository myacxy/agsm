<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.myacxy.agsm"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.activeandroid.app.Application"
        >

        <!-- START Active Android -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="agsm.db"
            />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="5"
            />
        <meta-data
            android:name="AA_MODELS"
            android:value=  "net.myacxy.agsm.models.GameEntity,
                             net.myacxy.agsm.models.GameServerEntity,
                             net.myacxy.agsm.models.PlayerEntity"
            />
        <meta-data
            android:name="AA_SERIALIZERS"
            android:value=  "net.myacxy.agsm.utils.TreeMapStringStringToJsonSerializer,
                             net.myacxy.agsm.utils.JodaDateTimeSerializer"
            />
        <!-- END Active Android -->



        <!-- START Activities -->
        <!--Main / Home Activity-->
        <activity
            android:name=".activities.MainActivity_"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Add Server Activity-->
        <activity
            android:name=".activities.AddServerActivity_"
            android:theme="@style/AddServerTheme"
            />
        <!--Server Activity-->
        <activity
            android:name=".activities.ServerActivity_"
            android:theme="@style/ServerTheme"
            />
        <!--Settings Activity-->
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            >
        </activity>
        <!-- END Activities -->



        <!-- START Services -->
        <service
            android:name=".AgsmService_"
            android:exported="false"
            />
        <!-- END Services -->



        <!--START Receivers-->
        <receiver
            android:name=".receivers.PeriodicRefreshReceiver_"
            android:exported="false"
            >

            <intent-filter>
                <action android:name="net.myacxy.agsm.activities.MainActivity.ACTION_ENSURE_PERIODIC_REFRESH" />
            </intent-filter>

        </receiver>

        <receiver
            android:name=".receivers.BootReceiver_"
            android:exported="false"
            >

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>

        </receiver>
        <!-- END Receivers -->



        <!-- START DashClock -->
        <service
            android:name="net.myacxy.agsm.AgsmDashClockExtension_"
            android:icon="@android:drawable/sym_def_app_icon"
            android:label="@string/app_name"
            android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA"
            >

            <intent-filter>
                <action android:name="com.google.android.apps.dashclock.Extension" />
                <action android:name="net.myacxy.agsm.activities.MainActivity.ACTION_ON_SERVER_ADDED" />
                <action android:name="net.myacxy.agsm.activities.MainActivity.ACTION_ON_SERVER_REMOVED" />
                <action android:name="net.myacxy.agsm.activities.MainActivity.ACTION_ON_SERVER_REFRESHED" />
                <action android:name="net.myacxy.agsm.activities.MainActivity.ACTION_ON_SERVERS_UPDATED" />
            </intent-filter>

            <meta-data
                android:name="protocolVersion"
                android:value="2"
                />

            <meta-data
                android:name="worldReadable"
                android:value="true"
                />

            <meta-data
                android:name="description"
                android:value="Description"
                />
        </service>
        <!-- END DashClock -->

    </application>

</manifest>
