<resources>

    <style name="AppTheme" parent="Base.AppTheme">

    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color3</item>
        <item name="colorPrimaryDark">@color/primary_color5</item>
        <item name="colorAccent">@color/complement_color5</item>
    </style>

    <style name="AddServerTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.ActionBar">
        <item name="colorPrimary">@color/primary_color3</item>
        <item name="colorPrimaryDark">@color/primary_color5</item>
        <item name="colorAccent">@color/complement_color5</item>
    </style>

    <style name="ServerTheme" parent="MaterialDrawerTheme.Light">
        <item name="colorPrimary">@color/primary_color3</item>
        <item name="colorPrimaryDark">@color/primary_color5</item>
        <item name="colorAccent">@color/complement_color5</item>
    </style>

    <style name="ServerCardContent" parent="Widget.CardContent">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppCompat.Button.Flat.Common" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/btn_flat_selector</item>
        <item name="android:minWidth">@dimen/btn_flat_min_width</item>
        <item name="android:minHeight">@dimen/btn_flat_min_height</item>
        <item name="android:textColor">@color/btn_flat_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppCompat.Button.Flat.Dialog" parent="AppCompat.Button.Flat.Common">
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>