<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/add_server_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AddServerTheme"
    >

    <include layout="@layout/include_add_server" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        app:fab_shadowXOffset="1dp"
        app:fab_shadowYOffset="3dp"
        app:fab_colorNormal="?attr/colorAccent"
        app:fab_colorPressed="@color/complement_color3"
        app:fab_progress_color="?attr/colorPrimary"
        app:fab_progress_showBackground="false"
        app:layout_behavior="net.myacxy.agsm.utils.FloatingActionButtonBehavior"
        android:src="@drawable/ic_done"
        />

</android.support.design.widget.CoordinatorLayout>

