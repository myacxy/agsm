<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/server_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/spacing_tiny"
    app:cardElevation="@dimen/spacing_tiny"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <LinearLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_normal"
            >
            <!--server title-->
            <TextView
                android:id="@+id/server_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textAppearance="?titleTextAppearance"
                android:layout_marginBottom="@dimen/spacing_tiny"
                />

            <!--game name-->
            <TextView
                android:id="@+id/server_card_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/server_card_title"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            >

            <!-- map -->
            <TextView
                android:id="@+id/server_card_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAppearance="?android:textAppearanceSmall"
                />

            <!--player count-->
            <TextView
                android:id="@+id/server_card_player_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAppearance="?android:textAppearanceSmall"
                />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


